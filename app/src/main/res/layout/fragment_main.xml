<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="1000dp"
    android:minHeight="450dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="50dp">

    <TextView
        android:id="@+id/question_itemview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="question"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/answer1_itemview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="answer 1"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/answer2_itemview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="answer 2"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/answer3_itemview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="answer 3"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/answer4_itemview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="answer 4"  />

    </LinearLayout>


</LinearLayout>


